        <CheckBox Content="Соус bbq" Height="16" HorizontalAlignment="Left" Margin="283,293,0,0" Name="checkBox8" VerticalAlignment="Top" />
        <CheckBox Content="Перец чили" Height="16" HorizontalAlignment="Left" Margin="283,323,0,0" Name="checkBox9" VerticalAlignment="Top" />
