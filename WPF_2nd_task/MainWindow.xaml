        <Rectangle Margin="1,2,0,4" Name="rectangle4" Fill="#FFF05D00" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="3" />
        <Rectangle Margin="1,2,0,4" Name="rectangle5" Fill="#FFF05D00" Grid.Column="6" Grid.ColumnSpan="3" Grid.Row="3" />
        <Rectangle Margin="0,1,3,2" Name="rectangle6" Fill="#FFF05D00" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" />
        <Rectangle Margin="0,1,2,2" Name="rectangle7" Fill="#FFF05D00" Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="3" />
        <Rectangle Margin="1,1,0,0" Name="rectangle8" Fill="#FFF05D00" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="7" />
        <Rectangle Margin="1,1,0,0" Name="rectangle9" Fill="#FFF05D00" Grid.Column="6" Grid.ColumnSpan="3" Grid.Row="7" />
